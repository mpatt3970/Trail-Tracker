<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools" 
	android:layout_width="wrap_content"
	android:layout_height="match_parent" 
	tools:context=".MainActivity" > 
		<Button 
		    android:id="@+id/displayList" 
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:text="@string/my_location"
			android:layout_alignParentRight="true"
			android:padding="10dp" />
	
		<Button 
		    android:id="@+id/updateLocation" 
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:text="@string/update"
			android:layout_below="@+id/displayList"
			android:layout_centerHorizontal="true"
			android:padding="10dp" />
		
		<EditText
		    android:id="@+id/enterText"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_below="@+id/updateLocation"
		    android:layout_toLeftOf="@+id/enter"
		    android:inputType="text" />
		
		<Button
		    android:id="@+id/enter"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:layout_below="@+id/updateLocation"
		    android:text="@string/enter" />
		
		<TextView 
		    android:id="@+id/displayLocation"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:textSize="20sp"
			android:layout_below="@+id/enterText"
			android:padding="10dp" />
		
		<Button
		    android:id="@+id/saveLocation"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/save"
		    android:textSize="20sp"
			android:layout_below="@+id/displayLocation"
			android:layout_centerHorizontal="true"
			android:padding="10dp"/>
</RelativeLayout>